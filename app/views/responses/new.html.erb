<div class="postcard">
  <div class="left-side">
    <p><%= @response_quote.body %></p>
  </div>
  <div class="right-side">
  </div>

</div>

<ol class="emoji_links">
  <% @emotions.each do |emotion| %>
    <li id="<%= emotion.title.downcase %>">
      <%= form_for @response do |f| %>
        <%= f.hidden_field :emotion_id, :value => emotion.id  %>
        <%= f.hidden_field :quote_id, :value => @response_quote.id  %>
        <%= f.submit "", :id => emotion.title.downcase %>
      <% end %>
    </li>
  <% end %>
</ol>
