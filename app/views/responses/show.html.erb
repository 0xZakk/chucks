<div class="frame">
  <h1>Quote</h1>

  <div class="postcard">

    <div class="quote">
      <p>"<%= @quote.body %>"</p>
    </div>

    <div class="author_data">
      <ul>
        <li><%= @quote.author %></li>
        <li><%= @quote.date %></li>
        <li><%= @quote.location %></li>
      </ul>
      <!-- the where attribute needs to be added, it is not mentioned in readme -->
    </div>

  </div>

  <div class="response_count">

    <p><%="#{@response_count}"%> number of people responded to this quote.</p>

  </div>

  <div class="arrow_bounce">
    <!-- reference: http://codepen.io/dodozhang21/pen/siKtp -->
  </div>


</div>
<!-- provides the first frame, quote info, number of people who have responded -->





<div class="frame">

  <div class="graph">
    <!-- graph will be added -->
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
    <% all_quote_responses= @responses.where("quote_id = #{@quote.id}")%>
    <%= pie_chart all_quote_responses.group(:emotion_id).count %>


    <p>testing test</p>
  </div>

  <div class="breakdown">
    visuals of percentage break down, color coded
  </div>


</div>
# shows the graph and visual data




